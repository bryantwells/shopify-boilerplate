<!doctype html>

    <head>

        <title>{{ page_title }}</title>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
        <meta name="description" content="{{ page_description | escape }}">
        <link rel="canonical" href="{{ canonical_url }}">
        <meta name="viewport" content="width=device-width,initial-scale=1,shrink-to-fit=no">
        
        <!-- Header hook for plugins -->
        {{ content_for_header }}

        {% include '_meta-social' %}
        {% include '_fonts' %}
        {{ 'main.css' | asset_url | stylesheet_tag }}

        <style>
            #admin-bar-iframe {
                display: none !important;
            }
        </style>

    </head>

    <body>

        <header class="Header">
            <!-- Cart -->
            {% include 'cart' %}
            <nav class="MainNav">

                {% comment %}
                    Cart Toggle
                    ---
                    This element contains data from the Vue store
                    and an event handler.
                    https://vuejs.org/v2/api/#delimiters
                    https://vuejs.org/v2/guide/events.html
                {% endcomment %}
                <button class="MainNav-cartToggle" @click="toggleDrawerCart">
                    <span class="MainNav-cartSpan">Cart (${ cartCount })</span>
                    <span class="MainNav-cartIcon">{% include 'icon-cart' %} (${ cartCount })</span>
                </button>
            </nav>
        </header>
        
        <!-- Content -->
        <main role="main">
            {{ content_for_layout }}
        </main>

        <!-- Footer -->
        {% section 'footer' %}

        <!-- Scripts -->
        {{ 'main.js' | asset_url | script_tag }}

    </body>

</html>